<h1>New Bookmark for <%= @list.name %></h1>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <div class="form-group">
    <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, prompt: 'Choose a movie', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :comment, input_html: { class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= f.button :submit, 'Add Bookmark', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to List', list_path(@list), class: 'btn btn-secondary' %>
