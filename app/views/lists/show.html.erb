<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= link_to bookmark.movie.title, movie_path(bookmark.movie) %>
      <%= bookmark.comment %>
      <%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
<%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
