<h1>New List</h1>

<%= simple_form_for @list do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>

  <div class="actions">
    <%= f.button :submit, 'Create List', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>
